<?xml version="1.0" encoding="UTF-8"?>
<config>
    <modules>
        <Magensky_Admintools>
            <version>1.0.0</version>
	        <stability>beta</stability>
            <depends>
                <!-- no dependencies -->
            </depends>
	        <license uri="http://opensource.org/licenses/osl-3.0.php">Open Software License (OSL)</license>
        </Magensky_Admintools>
    </modules>
    <global>
        <models>
            <admintools>
                <class>Magensky_Admintools_Model</class>
                <resourceModel>admintools_mysql4</resourceModel>
            </admintools>
            <admintools_mysql4>
            </admintools_mysql4>
        </models>
        <resources>
            <admintools_setup>
                <setup>
                    <module>Magensky_Admintools</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </admintools_setup>
            <admintools_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </admintools_write>
            <admintools_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </admintools_read>
        </resources>
        <blocks>
            <admintools>
                <class>Magensky_Admintools_Block</class>
            </admintools>
        </blocks>
        <helpers>
            <admintools>
                <class>Magensky_Admintools_Helper</class>
            </admintools>
        </helpers>
        <events>
            <core_block_abstract_to_html_after>
                <observers>
                    <admintools_core_block_abstract_to_html_after>
                        <class>admintools/observer</class>
                        <method>showTemplatePathHints</method>
                    </admintools_core_block_abstract_to_html_after>
                </observers>
            </core_block_abstract_to_html_after>
        </events>
    </global>
    <adminhtml>
        <layout>
            <updates>
                <admintools>
                    <file>admintools.xml</file>
                </admintools>
            </updates>
        </layout>
        <translate>
            <modules>
                <admintools>
                    <files>
                        <default>Magensky_Admintools.csv</default>
                    </files>
                </admintools>
            </modules>
        </translate>
