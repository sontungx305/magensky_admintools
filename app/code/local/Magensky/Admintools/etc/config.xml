                </children>
            </magensky>
        </menu>-->
        <acl>
            <resources>
                <admin>
                    <children>
                        <vendor>
                            <title>Vendor</title>
                            <children>                                
                                <orders>
                                    <title>Orders</title>
                                </orders>
                                <transaction>
                                    <title>Transactions</title>
                                </transaction>
                                <review>
									<title>Reviews</title>
                                </review>
                            </children>
                        </vendor>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <admintools>
                                            <title>Admintools Section</title>
                                        </admintools>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
    <default>
		<admintools>
            <template_path_hint>
                <active>0</active>
                <show_block>0</show_block>
                <code>show</code>
            </template_path_hint>
		</admintools>
    </default>
</config>
